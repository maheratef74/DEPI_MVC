@using PresentationLayer.Models.Roles.VMs
@model UserRoleVM

@{
    ViewData["Title"] = "Assign User to Role";
}
<hr />

<form asp-action="AssignUserRole" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="RoleId" class="control-label"></label>
        <select asp-for="RoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Assign Role" class="btn btn-outline-success">
    </div>
</form>

@if (TempData["SucessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SucessMessage"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}